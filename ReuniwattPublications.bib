@article{cadet_inter-comparison_2020,
title = {Inter-{Comparison} {Campaign} of {Solar} {UVR} {Instruments} under {Clear} {Sky} {Conditions} at {Reunion} {Island} (21°{S}, 55°{E})},
volume = {17},
copyright = {http://creativecommons.org/licenses/by/3.0/},
