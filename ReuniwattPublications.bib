
@inproceedings{liandrat_comparison_2021,
address = {Antibes Juan-les-Pins, France},
title = {Comparison of cloud statistics and space-to-ground optical link availability derived from {MSG}/{SEVIRI} with observations acquired from a ground based thermal camera in {Toulouse}},
abstract = {Considering the ever-growing volume of data acquired and transmitted by satellites, a major challenge is to have enough space-to-ground communication capabilities to offer a fitted broadcast service. Optical technologies offer several advantages compared to the more conventional radio communications. They enable higher throughput and increased confidentiality without encroaching on the already saturated radio spectrum. However, these systems are vulnerable to atmospheric turbulences and even more so to cloud cover, which can completely block the transmission of the laser through the atmosphere. To guarantee the availability of the system, it is necessary to work with networks of optical ground stations (OGS) distributed geographically in order to keep at least one terminal under clear sky conditions. The design of such OGS networks (size, location, etc.) is generally based on cloud statistics calculated from geostationary satellites such as MSG/SEVIRI. While satellite data offer a global coverage, they have a quite coarse spatial resolution of around 4 kilometres in the middle latitude regions. In this work, we propose to compare the cloud statistics derived from MSG/SEVIRI and the observations of a Sky InSight™, a ground-based wide-angle device designed by Reuniwatt which observes in the long-wave infrared band (8-14 μm). Located in Toulouse, this instrument allows day and night cloud observations with an increased spatial resolution compared to satellite data. Discrepancies between the two cloud observation data sources are discussed and a global estimation of the achievable throughput is computed for both Low Earth Orbit (LEO) and Geostationary Orbit (GEO) optical link scenarios.},
booktitle = {International {Conference} on {Space} {Optics}},
author = {Liandrat, Olivier and Roussel, Guillaume and Turpin, Mathieu and Decroix, Jacques and Schmutz, Nicolas},
year = {2021},
}

