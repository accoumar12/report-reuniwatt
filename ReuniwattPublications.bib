@inproceedings{kurzrock_multi-phase_2018,
address = {Washington, D.C., USA},
title = {Multi-{Phase} {Cloud} {Water} {Path} {Assimilation} {Using} {WRF}-{DART} for {Short}-{Term} {Solar} {Irradiance} {Forecasting} in the {South}-{West} {Indian} {Ocean}},
url = {https://agu.confex.com/agu/fm18/meetingapp.cgi/Paper/366307},
abstract = {The growth of the global total installed photovoltaic capacity is accompanied by an increasing need for more accurate short-term solar power forecasts. Those are especially important in the tropics where the solar potential and the intermittency of solar irradiance reach their maximum. One example is Reunion Island (21°S, 55°E) in the South-West Indian Ocean (SWIO) where renewables shall cover 50\% of the energy production by 2020. In the SWIO pronounced convection over the ocean makes short-term cloud and solar irradiance forecasting challenging.

Limited-area numerical weather prediction (NWP) models (LAMs) have the potential to forecast cloud and radiation processes in the order of kilometres and minutes. Nevertheless, their irradiance forecast accuracy largely depends on the initial conditions. As conventional in-situ observations are sparse in the SWIO, meteorological geostationary satellites provide valuable observations which can frequently be assimilated into LAMs.

In this study, the Weather Research and Forecasting (WRF) Model and the ensemble Kalman Filter of the Data Assimilation Research Testbed (DART) are applied to the SWIO. The boundary conditions of the 40 member WRF ensemble are provided by the Global Ensemble Forecast System.

For the first time multi-phase (ice, supercooled and liquid) water path retrievals of NASA Langley’s Satellite ClOud and Radiation Property retrieval System (SatCORPS) cloud products are assimilated using the DART cloud water path forward operator.

Cycling experiments with and without data assimilation (DA) have been performed over several weeks in austral summer 2017/18. Independent radio soundings are used to evaluate the impact of the satellite DA on the analysis. Moreover, an assessment of irradiance forecasts is performed using ground-based irradiance observations at 13 sites on Reunion Island.

The ice water path retrievals have the highest impact on the analyses which leads to an improvement of the WRF humidity profile. The applied DA methodology improves short-term (up to 24 hours) irradiance forecasts by up to 10\% in terms of RMSE.

The performed experiments provide a first evaluation of ensemble-based multi-phase CWP DA using LAMs. This work is a step forward towards improved short-term tropical solar irradiance forecasts.},
urldate = {2018-12-19},
booktitle = {American {Geophysical} {Union} {Fall} {Meeting}},
author = {Kurzrock, Frederik and Nguyen, Hannah and Sauer, Jerome and Cros, Sylvain and Chane Ming, Fabrice and Linguet, Laurent and Lajoie, Gilles},
month = dec,
year = {2018},
}

